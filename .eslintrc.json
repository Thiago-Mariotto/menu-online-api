{
  "env": {
    "es2021": true,
    "node": true
  },
  "ignorePatterns": [
    "temp.*",
    "*.spec.ts",
    "*.test.ts",
    "build/*"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "max-lines-per-function": [
      "error",
      20
    ],
    "max-params": [
      "error",
      4
    ]
  }
}